@model VitiligoTracker.Models.Patient

@{
    ViewData["Title"] = "患者详情";
}

<div class="d-flex justify-content-between align-items-center page-header">
    <div>
        <h1 class="mb-0 fw-bold text-dark">@Model.Name</h1>
        <p class="text-muted mb-0">
            <i class="bi bi-calendar-check me-1"></i>开始治疗: @Model.StartDate.ToShortDateString()
            @if(!string.IsNullOrEmpty(Model.Notes)) { <span class="mx-2">|</span> <i class="bi bi-info-circle me-1"></i>@Model.Notes }
        </p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>返回列表
    </a>
</div>

<div class="row g-4">
    <!-- 左侧：添加记录表单 -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-plus-circle-fill me-2 fs-5"></i>
                <span class="fw-bold">新增治疗记录</span>
            </div>
            <div class="card-body bg-light">
                <form asp-action="AddRecord">
                    <input type="hidden" name="PatientId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label small text-uppercase text-muted fw-bold">日期时间</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="bi bi-calendar3"></i></span>
                            <input type="datetime-local" name="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small text-uppercase text-muted fw-bold">治疗部位</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="bi bi-body-text"></i></span>
                            <input type="text" name="BodyPart" class="form-control" placeholder="例如: 面部" list="bodypart-list" autocomplete="off" />
                            <datalist id="bodypart-list">
                                @if (ViewBag.BodyPartDict != null)
                                {
                                    foreach (var part in ViewBag.BodyPartDict)
                                    {
                                        <option value="@part.Name" />
                                    }
                                }
                            </datalist>
                        </div>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <label class="form-label small text-uppercase text-muted fw-bold">照射剂量</label>
                            <div class="input-group">
                                <input type="number" step="0.01" name="IrradiationDose" class="form-control" required placeholder="0.00" />
                                <span class="input-group-text bg-white small">mJ</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <label class="form-label small text-uppercase text-muted fw-bold">建议剂量</label>
                            <div class="input-group">
                                <input type="number" step="0.01" name="SuggestDose" class="form-control" placeholder="0.00" readonly id="suggest-dose-input" />
                                <span class="input-group-text bg-white small">mJ</span>
                            </div>
                        </div>
<script>
// 自动计算建议剂量（仅前端演示，实际应由后端返回）
document.addEventListener('DOMContentLoaded', function() {
    const reactionSelect = document.querySelector('select[name="Reaction"]');
    const bodyPartInput = document.querySelector('input[name="BodyPart"]');
    const suggestDoseInput = document.getElementById('suggest-dose-input');
    // 假设后端可通过API返回前一天同部位剂量，这里用window.lastDose模拟
    window.lastDose = 1.0; // TODO: 用后端数据替换
    function updateSuggestDose() {
        let lastDose = window.lastDose || 0;
        let reaction = reactionSelect.value;
        if (reaction === 'None') {
            suggestDoseInput.value = (lastDose + 0.1).toFixed(2);
            suggestDoseInput.placeholder = '';
        } else if (reaction === 'Erythema') {
            suggestDoseInput.value = lastDose.toFixed(2);
            suggestDoseInput.placeholder = '';
        } else if (reaction === 'Blister') {
            suggestDoseInput.value = '';
            suggestDoseInput.placeholder = '停用1-3天，消退后再照射';
        }
    }
    reactionSelect.addEventListener('change', updateSuggestDose);
    bodyPartInput.addEventListener('blur', updateSuggestDose);
    updateSuggestDose();
});
</script>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small text-uppercase text-muted fw-bold">反应</label>
                        <select name="Reaction" class="form-select">
                            <option value="None">无反应</option>
                            <option value="Erythema">红斑反应</option>
                            <option value="Blister">起水泡</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                        <i class="bi bi-save me-2"></i>保存记录
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- 右侧：历史记录 -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-clock-history text-primary me-2 fs-5"></i>
                    <span class="fw-bold text-dark">治疗历史记录</span>
                </div>
                <span class="badge bg-light text-dark border">共 @(Model.TreatmentRecords?.Count ?? 0) 次</span>
            </div>

            <div class="card-body p-0">
                @if (Model.TreatmentRecords != null && Model.TreatmentRecords.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">日期</th>
                                    <th>部位</th>
                                    <th>照射剂量 <small class="text-muted fw-normal">(mJ)</small></th>
                                    <th>建议剂量 <small class="text-muted fw-normal">(mJ)</small></th>
                                    <th>累积剂量 <small class="text-muted fw-normal">(mJ)</small></th>
                                    <th class="pe-4">反应/备注</th>
                                    <th class="text-end pe-4">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.TreatmentRecords)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-dark">@record.Date.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td><span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">@record.BodyPart</span></td>
                                        <td class="fw-bold text-primary">@record.IrradiationDose.ToString("F2")</td>
                                        <td class="fw-bold text-warning">@record.SuggestDose?.ToString("F2")</td>
                                        <td class="text-muted">@record.CumulativeDose.ToString("F2")</td>
                                        <td class="text-muted small">@record.Reaction</td>
                                        <td class="text-end pe-4">
                                            <div class="d-flex justify-content-end gap-2">
                                                <a asp-action="EditRecord" asp-route-id="@record.Id" class="btn btn-sm btn-light text-primary shadow-sm" title="编辑" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                                <form asp-action="DeleteRecord" asp-route-id="@record.Id" method="post" class="d-inline" onsubmit="return confirm('确定要删除这条记录吗？');">
                                                    <button type="submit" class="btn btn-sm btn-light text-danger shadow-sm" title="删除" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-clipboard-x display-4 mb-3 d-block opacity-25"></i>
                        <p>暂无治疗记录，请在左侧添加。</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
