@model VitiligoTracker.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "注册";
}

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card border-0 shadow-lg mt-5">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0 text-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-person-plus-fill fs-1"></i>
                </div>
                <h2 class="fw-bold text-dark">创建新账号</h2>
                <p class="text-muted">注册以开始记录光疗进程</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold text-muted small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-phone"></i></span>
                            <input asp-for="PhoneNumber" class="form-control border-start-0 ps-0" placeholder="请输入手机号" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold text-muted small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" class="form-control border-start-0 ps-0" placeholder="请输入密码" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold text-muted small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-check2-circle"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" placeholder="请再次输入密码" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary py-2 fw-bold shadow-sm">
                            <i class="bi bi-person-plus me-2"></i>立即注册
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted small mb-0">已有账号？ <a asp-action="Login" class="text-primary text-decoration-none fw-bold">直接登录</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
